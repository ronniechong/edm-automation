root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = false

[*.json]
indent_size = 2
indent_style = space

[*.{jade,js}]
indent_size = 2
indent_style = space
insert_final_newline = false

[*.{scss,sass}]
indent_size = 2
indent_style = space
insert_final_newline = false

[*.md]
insert_final_newline = false
trim_trailing_whitespace = false